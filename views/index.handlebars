<div class="container text-center">
    <h1>Eat-DA-Burger</h1>
    <hr>
    <div class="jumbotron">
        <div class="row">
            <div class="col-md-6">
                <h2><i class="fas fa-hamburger mr-2"></i>Menu</h2>
                <hr>
                <ul>
                    {{#each burgers}}
                    {{#unless devoured}}
                    <li class="rounded">
                        <p>
                            {{this.id}}. {{this.burger_name}}
                            <button class="devour btn ml-2" data-id={{this.id}}
                                data-devoured={{this.devoured}}>Devour</button>
                        </p>
                    </li>
                    {{/unless}}
                    {{/each}}
                </ul>
                </ul>
            </div>
            <div class="col-md-6">
                <h2><i class="fas fa-utensils mr-2"></i>Devoured</h2>
                <hr>
                <ul>
                    {{#each burgers}}
                    {{#if devoured}}
                    <li class="rounded pt-1">
                        <p>
                            {{this.id}}. {{this.burger_name}}
                        </p>
                    </li>
                    {{/if}}
                    {{/each}}

                </ul>
            </div>
        </div>


    </div>
    <form class="mb-4">
        <h2><i class="fas fa-plus-circle mr-2"></i>Add a burger</h2>
        <hr>
        <input type="text" class="rounded" id="name">
        <button type="submit" class="post btn mb-1">Add</button>
    </form>
</div>